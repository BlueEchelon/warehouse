{% extends 'base.html.twig' %}

{% block title %}Catalog{% endblock %}

{% block body %}
    <h1>Catalog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ catalog.id }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ catalog.name }}</td>
            </tr>
        </tbody>
    </table>
    <p>Table of Product in Warehouse</p>
    <table class="table">
        <tbody>
            <tr>
                <th>Series</th>
                <th>Quantity</th>
                <th>Exp_Date</th>
                <th>Delete</th>
            </tr>
            {% for product in products %}
                <tr>
                    <td>{{ product.series }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.expDate|date("d/m/Y") }}</td>
                    <td>{{ include('product/_delete_form.html.twig', {'id':product.id,'id_catalog':catalog.id}) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <br>
    <a href="{{ path('app_product_new',{'id':catalog.id}) }}">Create new Batch of Product</a>
    <br>
    <br>
    <a href="{{ path('app_catalog_index') }}">back to list</a>

    <a href="{{ path('app_catalog_edit', {'id': catalog.id}) }}">edit Catalog</a>

    {{ include('catalog/_delete_form.html.twig') }}
{% endblock %}
